<%- include('partials/header', { user: user }) %>

<section>
  <div style="margin: 40px auto; width: 80%;">
    <h2 style="text-align: center;">CRUD â€“ Students Table</h2>
    <p style="text-align: center;">Manage student records below (connected to phpMyAdmin database).</p>

    <!-- Add new student -->
    <h3>Add a new student</h3>
    <form action="/crud/add" method="POST" style="margin-bottom: 20px;">
      <label>Student Name:</label>
      <input type="text" name="sname" required>
      <label>Class:</label>
      <input type="text" name="class" required>
      <label>Boy (1 = yes, 0 = no):</label>
      <input type="number" name="boy" min="0" max="1" required>
      <button type="submit">Add Record</button>
    </form>

    <!-- Table of students -->
    <table border="1" cellpadding="6" cellspacing="0" width="100%">
      <thead style="background-color: #f0f0f0;">
        <tr>
          <th>ID</th>
          <th>Student Name</th>
          <th>Class</th>
          <th>Boy</th>
          <th>Modify</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% if (students.length > 0) { %>
          <% students.forEach(st => { %>
            <tr>
              <form action="/crud/update/<%= st.id %>" method="POST">
                <td><%= st.id %></td>
                <td><input type="text" name="sname" value="<%= st.sname %>" required></td>
                <td><input type="text" name="class" value="<%= st.class %>" required></td>
                <td><input type="number" name="boy" value="<%= st.boy %>" min="0" max="1" required></td>
                <td><button type="submit">Modify</button></td>
                <td><a href="/crud/delete/<%= st.id %>">Delete</a></td>
              </form>
            </tr>
          <% }) %>
        <% } else { %>
          <tr><td colspan="6" style="text-align:center;">No students found.</td></tr>
        <% } %>
      </tbody>
    </table>
  </div>
</section>

<%- include('partials/footer') %>
