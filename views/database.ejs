<%- include('partials/header', { user: user }) %>

<section class="main style1">
  <div class="container" style="padding:40px;">
    <h2>Database Menu</h2>
    <p>This page displays data loaded from three files: students, subjects, and marks.</p>

    <hr>

    <!-- Students Table -->
    <h3>Students</h3>
    <table style="width:100%; border-collapse:collapse;">
      <tr style="background:#f0f0f0;">
        <% Object.keys(students[0] || {}).forEach(key => { %>
          <th style="border:1px solid #ccc; padding:8px;"><%= key %></th>
        <% }) %>
      </tr>
      <% students.forEach(row => { %>
        <tr>
          <% Object.values(row).forEach(value => { %>
            <td style="border:1px solid #ccc; padding:8px;"><%= value %></td>
          <% }) %>
        </tr>
      <% }) %>
    </table>

    <br><br>

    <!-- Subjects Table -->
    <h3>Subjects</h3>
    <table style="width:100%; border-collapse:collapse;">
      <tr style="background:#f0f0f0;">
        <% Object.keys(subjects[0] || {}).forEach(key => { %>
          <th style="border:1px solid #ccc; padding:8px;"><%= key %></th>
        <% }) %>
      </tr>
      <% subjects.forEach(row => { %>
        <tr>
          <% Object.values(row).forEach(value => { %>
            <td style="border:1px solid #ccc; padding:8px;"><%= value %></td>
          <% }) %>
        </tr>
      <% }) %>
    </table>

    <br><br>

    <!-- Marks Table -->
    <h3>Marks</h3>
    <table style="width:100%; border-collapse:collapse;">
      <tr style="background:#f0f0f0;">
        <% Object.keys(marks[0] || {}).forEach(key => { %>
          <th style="border:1px solid #ccc; padding:8px;"><%= key %></th>
        <% }) %>
      </tr>
      <% marks.forEach(row => { %>
        <tr>
          <% Object.values(row).forEach(value => { %>
            <td style="border:1px solid #ccc; padding:8px;"><%= value %></td>
          <% }) %>
        </tr>
      <% }) %>
    </table>
  </div>
</section>

<%- include('partials/footer') %>
