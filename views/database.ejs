<%- include('partials/header', { user: user }) %>

<section class="main style1">
  <div class="container" style="padding:40px; text-align:center;">
    <h2>Database Menu</h2>
    <p>Below you can see data loaded from the student, subject, and marks tables.</p>

    <!-- Students Table -->
    <h3 style="margin-top:40px;">Students Table</h3>
    <div style="overflow-x:auto;">
      <table style="width:100%; border-collapse:collapse;">
        <tr style="background:#f0f0f0;">
          <% students.headers.forEach(h => { %>
            <th style="border:1px solid #ccc; padding:8px;"><%= h %></th>
          <% }) %>
        </tr>
        <% students.rows.forEach(row => { %>
          <tr>
            <% students.headers.forEach(h => { %>
              <td style="border:1px solid #ccc; padding:8px;"><%= row[h] %></td>
            <% }) %>
          </tr>
        <% }) %>
      </table>
    </div>

    <!-- Subjects Table -->
    <h3 style="margin-top:40px;">Subjects Table</h3>
    <div style="overflow-x:auto;">
      <table style="width:100%; border-collapse:collapse;">
        <tr style="background:#f0f0f0;">
          <% subjects.headers.forEach(h => { %>
            <th style="border:1px solid #ccc; padding:8px;"><%= h %></th>
          <% }) %>
        </tr>
        <% subjects.rows.forEach(row => { %>
          <tr>
            <% subjects.headers.forEach(h => { %>
              <td style="border:1px solid #ccc; padding:8px;"><%= row[h] %></td>
            <% }) %>
          </tr>
        <% }) %>
      </table>
    </div>

    <!-- Marks Table -->
    <h3 style="margin-top:40px;">Marks Table</h3>
    <div style="overflow-x:auto;">
      <table style="width:100%; border-collapse:collapse;">
        <tr style="background:#f0f0f0;">
          <% marks.headers.forEach(h => { %>
            <th style="border:1px solid #ccc; padding:8px;"><%= h %></th>
          <% }) %>
        </tr>
        <% marks.rows.forEach(row => { %>
          <tr>
            <% marks.headers.forEach(h => { %>
              <td style="border:1px solid #ccc; padding:8px;"><%= row[h] %></td>
            <% }) %>
          </tr>
        <% }) %>
      </table>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
